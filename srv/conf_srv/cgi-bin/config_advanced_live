{
    echo "<body>"
    source $SCRIPT_PATH/add_navbar.sh 
    source $SCRIPT_PATH/add_page_timeout.sh
    print_overlay
    echo "    <div class=\"features-boxed\">"
    echo "        <div class=\"container\">"
}

print_feature_box_end()
{
    echo "        </div>"
    echo "    </div>"
}

