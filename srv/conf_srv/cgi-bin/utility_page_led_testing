<script>
    function set_led_green() {
      // Disable navbar, user must us BACK button to exit here
      navbar_set_navbar_disabled(true, "Using this utility page disables the navbar.  Please use the BACK button below to exit this page, as this restores normal LED function from testing lockdown");
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
          document.getElementById("request_desc").innerHTML = "GREEN Request:";
          document.getElementById("response_txt").innerHTML = this.responseText;
        }
      };
      xhttp.open("GET", '/cgi-bin/req_set_led_color?color=GREEN', true);
      xhttp.send();
    }

    function set_led_yellow() {
      navbar_set_navbar_disabled(true, "Using this utility page disabled the navbar.  Please use the BACK button below to exit this page, as this restores normal LED function from testing lockdown");
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
          document.getElementById("request_desc").innerHTML = "YELLOW Request:";
          document.getElementById("response_txt").innerHTML = this.responseText;
        }
      };
      xhttp.open("GET", '/cgi-bin/req_set_led_color?color=YELLOW', true);
      xhttp.send();
    }

    function set_led_red() {
      navbar_set_navbar_disabled(true, "Using this utility page disabled the navbar.  Please use the BACK button below to exit this page, as this restores normal LED function from testing lockdown");
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
          document.getElementById("request_desc").innerHTML = "RED Request:";
          document.getElementById("response_txt").innerHTML = this.responseText;
        }
      };
      xhttp.open("GET", '/cgi-bin/req_set_led_color?color=RED', true);
      xhttp.send();
    }

    function set_led_off() {
      navbar_set_navbar_disabled(true, "Using this utility page disabled the navbar.  Please use the BACK button below to exit this page, as this restores normal LED function from testing lockdown");
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
          document.getElementById("request_desc").innerHTML = "OFF Request:";
          document.getElementById("response_txt").innerHTML = this.responseText;
        }
      };
      xhttp.open("GET", '/cgi-bin/req_set_led_color?color=OFF', true);
      xhttp.send();
    }

    function go_back() {
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
          // Send user back
          document.getElementById("request_desc").innerHTML = "Back button:";
          document.getElementById("response_txt").innerHTML = "clicked";
          window.location.href = '/cgi-bin/util_display_live';
        }
      };
      // Tell rsuhealth it's back on LED color maintenance
      xhttp.open("GET", '/cgi-bin/req_set_led_color?color=BACK', true);
      xhttp.send();
    }

</script>
</body>
</html>

