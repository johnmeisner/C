    <script>
    function start_update() {
      if (ready_for_update_request_status == "READY") {
          ready_for_update_request_status = "REQ_SENT";
          send_data_update_request();
      } else {
          ready_for_update_request_status = ready_for_update_request_status + " ... STILL WAITING";
      }
      var t = setTimeout(start_update, 1000);
    }
    var ready_for_update_request_status = "READY";
    function send_data_update_request() {
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
          ready_for_update_request_status = "READY";
          var str = this.responseText;
          var bits_arr = str.split('<COMMA>');

          document.getElementById("kinem_txt").innerHTML = bits_arr[0].trim();
          document.getElementById("ublox_txt").innerHTML = bits_arr[1].trim();
          document.getElementById("ub_posn_fix_time").innerHTML = bits_arr[2];
          document.getElementById("ub_time_fix_time").innerHTML = bits_arr[3];
          document.getElementById("ub_ok_time_fix_time").innerHTML = bits_arr[4];
          document.getElementById("ub_fw_ver").innerHTML = bits_arr[5];
          document.getElementById("ub_cfg_ver").innerHTML = bits_arr[6];
          document.getElementById("gps_ant1").innerHTML = bits_arr[7];
          if (bits_arr[7].trim() == "Connected")
              document.getElementById("gps_ant1").style.color = "green";
          else
            document.getElementById("gps_ant1").style.color = "red";
          document.getElementById("ub_noise").innerHTML = bits_arr[8];
          document.getElementById("ub_jam_ind").innerHTML = bits_arr[9];
          document.getElementById("ub_jam_sts").innerHTML = bits_arr[10];
        }
      };
      xhttp.open("GET", '/cgi-bin/get_gnss_detail_data', true);
      xhttp.send();
    }
    function start_timers() {
      ready_for_update_request_status = "READY";
      start_update();
    }
    </script>
</body>
</html>

